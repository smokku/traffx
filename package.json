{
  "name": "traffic",
  "version": "1.0.0",
  "description": "XMPP daemon",
  "main": "main.js",
  "scripts": {
    "start": "env DEBUG='*' node main.js | bunyan -o short",
    "pretest": "eslint .",
    "test": "ava --timeout=5s",
    "console": "xmpp-console"
  },
  "repository": {
    "type": "git",
    "url": "git@dev.xiaoka.com:chrome/traffic.git"
  },
  "author": "Tomasz Sterna <tomek@xiaoka.com>",
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "bunyan": "^1.8.5",
    "debug": "^2.6.9",
    "dynamoose": "^0.7.0",
    "junction": "^0.2.0",
    "junction-lastactivity": "^0.1.0",
    "junction-ping": "^0.1.0",
    "junction-softwareversion": "^0.1.0",
    "junction-time": "^0.1.0",
    "node-stringprep": "^0.8.0",
    "node-xmpp-server": "^2.2.5",
    "redis": "^2.6.5",
    "redlock": "^2.1.0"
  },
  "devDependencies": {
    "@xmpp/console": "^0.0.1",
    "ava": "^0.18.2",
    "dynalite": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-unicorn": "^2.0.1",
    "node-xmpp-client": "^3.1.2",
    "pre-commit": "^1.2.2",
    "standard": "*"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "ava",
      "import",
      "unicorn",
      "standard"
    ],
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:ava/recommended",
      "plugin:import/recommended",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": "error",
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "prefer-numeric-literals": 2,
      "block-scoped-var": "error",
      "import/unambiguous": "off"
    }
  }
}
